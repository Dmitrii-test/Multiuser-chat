<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd">
    <changeSet id="create-table-messages" author="Liquibase">
        <createTable tableName="messages">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="type" type="varchar(12)">
                <constraints nullable="false"/>
            </column>
            <column name="data" type="varchar(128)"/>
            <column name="datetime" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="int">
                <constraints foreignKeyName="messages_user_id_users_id" references="users(id)" deleteCascade="true"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>

